<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextInputLayoutStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AccTextInputLayoutStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#002cda</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ErrorTextInputLayoutStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#a60200</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NormalColorTextView" parent="android:Widget.TextView">
        <item name="android:textColor">#000</item>
    </style>

    <style name="NormalColorEditText" parent="android:Widget.EditText">
        <item name="android:textColor">#000</item>
    </style>

    <!--CUSTOM BASE STYLE-->
    <style name="BaseButton" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">@dimen/txtSize_button</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="NormalTextView.Show" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/txtSize_normal_show</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NormalTextView.Input" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/txtSize_normal_input</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NormalTextView.Show.White" parent="NormalTextView.Show">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="NormalTextView.Show.Black" parent="NormalTextView.Show">
        <item name="android:textColor">#000</item>
    </style>

    <!--FRAGMENT LOGIN-->
    <style name="BaseTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">#fff</item><!--hint khi bình thường-->
    </style>

    <style name="TextInputLayoutLogin" parent="BaseTextInputLayout">
        <item name="android:layout_marginBottom">@dimen/margin_bottom_of_til_login</item>
    </style>

    <style name="TextInputLayoutRegister" parent="BaseTextInputLayout">
        <item name="android:layout_marginBottom">@dimen/margin_bottom_of_til_register</item>
    </style>

    <style name="EditTextLoginView" parent="Widget.AppCompat.EditText"><!--đổi style parent-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/margin_left_hint_input_text</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/txtSize_normal_input</item>
    </style>

    <style name="AutheticationSubmitButton" parent="BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_of_button_login</item>
    </style>

    <style name="LinkTextViewAuth" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/txtSize_small</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_of_link_auth</item>
    </style>


    <!--USER FOR FRAGMENT ACCOUNT-->
    <style name="EditTextAccount" parent="Widget.AppCompat.EditText"><!--đổi style parent-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/margin_left_hint_input_text</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/colorTextFragAcc</item>
        <item name="android:textColorHint">#000</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/txtSize_normal_input</item>
    </style>

    <style name="EditAccountButton" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txtSize_acc_button</item>
    </style>

    <!--NÚT DIALOG VERIFY PASSWORD-->
    <style name="ProcessPasswordSubmitButton" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingTop">@dimen/normal_space</item>
        <item name="android:paddingBottom">@dimen/normal_space</item>
        <item name="android:paddingStart">@dimen/larg_space</item>
        <item name="android:paddingEnd">@dimen/larg_space</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txtSize_small_acc_button</item>
    </style>

    <!--FRAGMENT HOME-->
    <!--ITEM CHATTER-->
    <style name="FullNameTextView_ItemChatter" parent="android:Widget.TextView">
        <item name="android:paddingTop">@dimen/small_space</item>
        <item name="android:paddingBottom">@dimen/small_space</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/txtSize_large</item>
    </style>

    <style name="LastMessageTextView_ItemChatter" parent="android:Widget.TextView">
        <item name="android:paddingTop">@dimen/small_space</item>
        <item name="android:paddingBottom">@dimen/small_space</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#8e8e8e</item>
        <item name="android:textSize">@dimen/txtSize_normal</item>
    </style>

    <!--ACTIVITY CHAT-->
    <style name="TimeTextViewActivityChat" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">@dimen/small_space</item>
        <item name="android:textColor">#a8a8a8</item>
        <item name="android:textSize">@dimen/txtSize_xsmall</item>
    </style>

</resources>
